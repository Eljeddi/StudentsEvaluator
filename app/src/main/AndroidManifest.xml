    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/SplashTheme" />
        <activity android:name=".JobActivity" />
        <activity
            android:name=".TeacherActivity"
            android:label="@string/title_activity_teacher"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".StudentActivity"
            android:label="@string/title_activity_student"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".AddQuizActivity"
            android:label="@string/title_activity_add_quiz"
            android:theme="@style/SplashTheme" />
        <activity android:name=".DoTheQuizActivity"></activity>
    </application>

</manifest>